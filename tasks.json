{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "(build) cmake build",
			"command": "build",
			"type": "cmake",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "(build) cmake install",
			"type": "shell",
			"command": "make",
			"args": [
				"-j18",
				"install"
			],
			"options": {
				"cwd": "${workspaceFolder}/debug/"
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "(env) kill taosd",
			"type": "shell",
			"command": "killall",
			"args": [
				"-9",
				"--quiet",
				"taosd"
			],
			"presentation": {
				"reveal": "never",
				"revealProblems": "never",
				"close": true
			}
		},
		{
			"label": "(env) set node1",
			"type": "shell",
			"command": "bash",
			"args": [
				"${workspaceFolder}/.vscode/scripts/setEnv.sh",
				"${workspaceFolder}",
				"1"
			],
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			}
		},
		{
			"label": "(env) set node2",
			"type": "shell",
			"command": "bash",
			"args": [
				"${workspaceFolder}/.vscode/scripts/setEnv.sh",
				"${workspaceFolder}",
				"2"
			],
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			}
		},
		{
			"label": "(env) set node3",
			"type": "shell",
			"command": "bash",
			"args": [
				"${workspaceFolder}/.vscode/scripts/setEnv.sh",
				"${workspaceFolder}",
				"3"
			],
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			}
		},
		{
			"label": "(env) set three nodes",
			"type": "shell",
			"command": "bash ${workspaceFolder}/.vscode/scripts/setEnv.sh ${workspaceFolder} 1 && bash ${workspaceFolder}/.vscode/scripts/setEnv.sh ${workspaceFolder} 2 && bash ${workspaceFolder}/.vscode/scripts/setEnv.sh ${workspaceFolder} 3",
			"presentation": {
				"reveal": "silent",
				"revealProblems": "onProblem",
				"close": true
			}
		},
		{
			"label": "(run) node1",
			"type": "shell",
			"command": "${workspaceFolder}/debug/build/bin/taosd",
			"args": [
				"-c",
				"${workspaceFolder}/sim/dnode1/cfg"
			]
		},
		{
			"label": "(run) node1 clear",
			"type": "shell",
			"command": "${workspaceFolder}/debug/build/bin/taosd",
			"args": [
				"-c",
				"${workspaceFolder}/sim/dnode1/cfg"
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"dependsOn": [
				"(env) set node1"
			]
		},
		{
			// valgrind --log-file="valgrind1.log"  --tool=memcheck  --leak-check=full --show-reachable=yes --track-origins=yes --show-leak-kinds=all -v ./debug/build/bin/taosd -c sim/dnode1/cfg
			"label": "(run) node1 valgrind",
			"type": "shell",
			"command": "valgrind",
			"args": [
				"--log-file=\"valgrind.log\"",
				"--tool=memcheck",
				"--leak-check=full",
				"--show-reachable=yes",
				"--track-origins=yes",
				"--show-leak-kinds=all",
				"-v",
				"${workspaceFolder}/debug/build/bin/taosd",
				"-c",
				"${workspaceFolder}/sim/dnode1/cfg"
			]
		},
		{
			"label": "(run) shell",
			"type": "shell",
			"command": "${workspaceFolder}/debug/build/bin/taos",
			"args": [
				"-c",
				"${workspaceFolder}/sim/dnode1/cfg"
			]
		},
		{
			"label": "(run) shell script",
			"type": "shell",
			"command": "${workspaceFolder}/debug/build/bin/taos",
			"args": [
				"-c",
				"${workspaceFolder}/sim/dnode1/cfg",
				"-f",
				"${workspaceFolder}/tests/script/sim.sql"
			],
			"problemMatcher": [],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "(run) taosBenchmark",
			"type": "shell",
			"command": "${workspaceFolder}/debug/build/bin/taosBenchmark",
			"args": [
				"-f",
				"${workspaceFolder}/.vscode/tests/insert.json"
			],
			"problemMatcher": []
		},
		{
			"label": "(test) sim-scripts",
			"type": "shell",
			"command": "bash",
			"args": [
				"./runAllSimCases.sh"
			],
			"options": {
				"cwd": "${workspaceFolder}/tests/script"
			},
			"dependsOn": [
				"(build) cmake build"
			],
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "(test) python-scripts",
			"type": "shell",
			"command": "bash",
			"args": [
				"./fulltest.sh"
			],
			"options": {
				"cwd": "${workspaceFolder}/tests/system-test"
			},
			"dependsOn": [
				"(build) cmake install"
			],
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "(test) create table",
			"type": "shell",
			"command": "${workspaceFolder}/debug/build/bin/create_table",
			"args": [
				"-c",
				"${workspaceFolder}/sim/dnode1/cfg",
				"-t",
				"12",
				"-n",
				"10000000",
				"-v",
				"20",
				"-b",
				"200"
			],
			"problemMatcher": [],
			"group": "test"
		},
		{
			"label": "(git) pull from 3.0",
			"type": "shell",
			"command": "git pull origin 3.0",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "(perf) taosd",
			"type": "shell",
			"command": "sudo perf record -a -F 99 -g -p $(pgrep -x taosd)",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "(perf) plot",
			"type": "shell",
			"command": "sudo perf script |/home/hzcheng/Documents/work/FlameGraph/stackcollapse-perf.pl | /home/hzcheng/Documents/work/FlameGraph/flamegraph.pl > fg.svg",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "(mon) top",
			"type": "shell",
			"command": "top",
			"args": [],
			"presentation": {
				"reveal": "always",
				"revealProblems": "always",
				"close": true,
				"focus": true,
				"panel": "new"
			}
		},
	]
}