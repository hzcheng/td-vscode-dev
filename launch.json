        {
            "name": "(gdb) taosd coredump",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/build/bin/taosd",
            "coreDumpPath": "${input:coreFileName}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ],
    "inputs": [
        {
            "id": "coreFileName",
            "description": "coredump file name",
            "type": "promptString"
        }
    ]
}