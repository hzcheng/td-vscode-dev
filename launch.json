    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) node1",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/build/bin/taosd",
            "args": [
                "-c",
                "${workspaceFolder}/sim/dnode1/cfg"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) node1 clear",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/build/bin/taosd",
